@model NutshellRepo.ViewModels.Account.LogInViewModel

@{
    ViewData["Title"] = "SignIn";
}



    <form asp-action="LogIn" id="loginDiv">
        <div class="form-group myInputGroup">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group myInputGroup">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="myInputGroup" id="checkBoxDiv">

            <label for="checkbox" id="checkLbl">
                <input type="checkbox" asp-for="RememberMe" id="checkbox" />
                <span id="rememberMe" title="Do Not use this option if you SignIn from a public place.">@Html.DisplayNameFor(model => model.RememberMe)</span>
            </label>

        </div>

        <div class="form-group">
            <input type="submit" value="SignIn" class="btn btn-primary" id="logInBtn"/>
        </div>
    </form>

@section Scripts
{
    <link href="~/Site/css/Register.css" rel="stylesheet" />  

}