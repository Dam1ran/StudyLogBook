@{
    ViewData["Title"] = "Confirmation";
}

<div class="mt-4 border border-secondary rounded-top rounded-lg p-2 pb-0">

    <div class="confirmationText">
        <br />
        <h2>A message was sent to specified address!</h2>
        <br />
        <h3> Follow the link provided in order to confirm your email </h3>

        <br />
        In some cases it may take several minutes before a message reaches the destination. Also check your spam folder.
        <br /><br/>
        <div class="text-center">You Make this resource beloved by the day!</div>
        <br />
        <a asp-controller="home" asp-action="index" class="btn btn-info btns homePageBtn" id="homeBtn">Home Page</a>
    </div>

</div>

@section Scripts
{
    <link href="~/Site/css/Register.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(function () {
                document.getElementById("homeBtn").click();
            }, 20000);
        });
    </script>

}